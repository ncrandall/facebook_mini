<h1>Login</h1>

<div class="span4 row">

<% if current_user.nil? %>
  <%= form_for(:session, url: sessions_path) do |u| %>
    <p><%= u.label :username %></p>
    <%= u.text_field :username %>
 
    <p class="pull-right"><%= u.submit "login", :class => "btn btn-primary" %></p>
  <% end %>
<% else %>
  You are currently logged in as <%= current_user.username %>. <%= link_to "Log Out", session_path(current_user.id), :method => :DELETE %>
<% end %>
</div>
